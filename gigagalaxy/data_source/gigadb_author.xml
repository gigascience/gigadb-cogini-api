        <param name="author"
              type="text"
              format="input"
              label="author"
              value="Luo"/>
    </inputs>
    <outputs>
        <data name="gigadboutput"
              type="data"
              format="txt"
              label="out">
        </data>
    </outputs>
    <tests>
        <test>
        </test>
    </tests>
    <help>
    </help>
</tool>
